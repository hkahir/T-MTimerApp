<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_benifits"
    android:gravity="center"
    android:keepScreenOn="true"
    android:orientation="vertical"
    tools:context="com.t_mtimer.MeditationActivity">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:clickable="false"
        android:gravity="center">

        <com.t_mtimer.common.RingProgressBar
            android:id="@+id/pbWaterlab"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_centerInParent="true"
            android:indeterminate="true"
            app:max="1200"
            app:ringColor="@color/Black_trans"
            app:ringProgressColor="@color/LightSteelBlue"
            app:ringWidth="10dp"
            app:textColor="@color/colorPrimary"
            app:textIsShow="true"
            app:textSize="20sp" />

        <ImageView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:clickable="false"
            android:padding="11dp"
            android:src="@drawable/ic_timer_logo" />

    </RelativeLayout>


    <TextView
        android:id="@+id/songCurrentDurationLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="20:00"
        android:textColor="@color/white"
        android:textSize="40dp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/btn_restart"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:background="@drawable/btn_rrestart" />

    <TextView
        android:id="@+id/tv_goback"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Go back"
        android:textColor="@color/white"
        android:textSize="22dp"
        android:textStyle="bold" />

    <View
        android:layout_width="80dp"
        android:layout_height="1dp"
        android:layout_gravity="center"
        android:layout_marginTop="5dp"
        android:background="@android:color/white" />

</LinearLayout>
